<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selectable_background_rectangle"
    android:paddingHorizontal="10dp"
    android:layout_marginBottom="8dp"
    android:paddingVertical="15dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/beginGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="10dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/endGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="10dp"/>


    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/beginGuideline"
        android:textSize="20sp"
        >
    </TextView>

    <TextView
        android:id="@+id/region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Московская область, Россия"
        android:textColor="@color/gray"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/beginGuideline"
        app:layout_constraintTop_toBottomOf="@id/city">

    </TextView>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="вс, 16 октября 16:19"
        android:textColor="@color/gray"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/beginGuideline"
        app:layout_constraintTop_toBottomOf="@id/region"
        >

    </TextView>


<!--        <ImageView-->
<!--            android:layout_width="40dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:layout_marginEnd="36dp"-->
<!--            android:src="@drawable/ic_01d"-->
<!--            app:layout_constraintBottom_toBottomOf="@+id/max_min_temp"-->
<!--            app:layout_constraintEnd_toEndOf="@+id/max_min_temp">-->

<!--        </ImageView>-->

    <TextView
        android:id="@+id/city_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="\u201223\u00B0"
        app:layout_constraintRight_toRightOf="@id/endGuideline"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black">
    </TextView>

    <TextView
        android:id="@+id/max_min_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/city_temperature"
        app:layout_constraintRight_toRightOf="@id/endGuideline"
        android:text="13\u00B0/8\u00B0"
        android:textColor="@color/gray">
    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>

